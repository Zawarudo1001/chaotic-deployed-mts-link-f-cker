{
  "manifest_version": 3,
  "name": "chaotic-deployed-mts-link-f-cker",
  "version": "0.1",
  "description": "Автоматически наживает кнопку для отметки и сайт будет всегда будет думать что вы смотрите трансляцию",
  "content_scripts": [
    {
      "world": "MAIN",
      "run_at": "document_start",
      "js": ["main.js"],
      "matches": ["https://*.mts-link.ru/*"]
    }
  ],
  "permissions": [
		"activeTab",
		"scripting",
    "storage",
    "tabs",
		"background"
	],
  "background": {
		"service_worker": "background.js"
	},
  "icons": {
    "16": "icons/icon-16.jpg",
    "32": "icons/icon-32.jpg",
    "48": "icons/icon-48.jpg",
    "128": "icons/icon-128.jpg"
  }
}