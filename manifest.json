{
  "manifest_version": 3,
  "name": "chaotic-deployed-mts-link-f-cker",
  "version": "0.1",
  "description": "Автоприсутствие + контроль активной вкладки",
  "icons": {
    "16": "icons/icon16.jpg",
    "32": "icons/icon32.jpg",
    "48": "icons/icon48.jpg",
    "128": "icons/icon128.jpg"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Mclovin'TS Link",
    "default_icon": {
      "16": "icons/icon16.jpg",
      "48": "icons/icon48.jpg"
    }
  },
  
  "content_scripts": [
    {
      "world": "MAIN",
      "run_at": "document_start",
      "js": ["content.js"],
      "matches": ["https://*.mts-link.ru/*"]
    }
  ],
  "permissions": [
		"activeTab",
		"scripting",
        "storage",
        "tabs",
		"background"
	]
}