{
  "manifest_version": 3,
  "name": "Mclovin'TS Link",
  "version": "0.1",
  "description": "Автоприсутствие + контроль активной вкладки",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Mclovin'TS Link",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "world": "MAIN",
      "run_at": "document_start",
      "js": [
        "content.js"
      ],
      "matches": [
        "https://*.mts-link.ru/*"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ]
}